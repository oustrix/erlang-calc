{
  "name": "erlang-calc",
  "version": "1.0.0",
  "description": "Анализатор Эрланга",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.erlang.analyzer",
    "productName": "Анализатор Эрланга",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "index.html",
      "renderer.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
